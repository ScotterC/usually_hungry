<div class="row">
  <div class="col">
    <h1><%= @user.email %></h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <h2>Lists Following</h2>
    <table class="table">
      <thead>
        <tr>
          <th>List</th>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col">
    <h2>Lists Created</h2>
    <table class="table">
      <table class="table">
        <thead>
          <tr>
            <th>List</th>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @user.created_lists.each do |list| %>
            <tr>
              <td><%= list.name %></td>
              <td><%= list.description %></td>
              <td><%= list.owner_id %></td>
              <td><%= link_to 'Show', list %></td>
              <td><%= link_to 'Edit', edit_list_path(list) %></td>
              <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>