<%
  form_path = item.new_record? ? list_items_path : list_item_path(@list, item)
%>
<%= form_with(model: [@list, item], url: form_path) do |form| %>
  <%= render 'shared/form_error', target: item %>

  <%= form.hidden_field :list_id, value: @list.id %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="float-right">
    <% btn_txt = item.new_record? ? "Create" : "Update" %>
    <%= form.submit btn_txt, class: "btn btn-primary" %>
  </div>
<% end %>
